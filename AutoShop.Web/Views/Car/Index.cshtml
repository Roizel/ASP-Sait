@model HomeIndexViewModel
<h1>Список авто</h1>
@await Html.PartialAsync("_Search", Model.Search)
@if (User.IsInRole("Admin"))
{
    <a asp-action="Create" class="btn btn-success">Додати авто</a>
}
@if (User.IsInRole("Admin"))
{
    <a asp-action="Delete" class="btn btn-danger">Видалити авто</a>
}
@if (User.IsInRole("Admin"))
{
    <a asp-action="Change" class="btn btn-outline-dark">Редагувати авто</a>
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Марка</th>
            <th scope="col">Модель</th>
            <th scope="col">Photo</th>
            <th scope="col">Рік</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cars)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Mark</td>
                <td>@item.Model</td>
                <td>
                    <img src="/images/@item.PathImg" alt="Alernate Text" width="150" />
                </td>
                <td>@item.Year</td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("_Pagination", Model)