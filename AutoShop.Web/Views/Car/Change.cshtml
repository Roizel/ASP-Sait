@model AutoShop.Web.Models.CarChangeViewModel

@{
    ViewData["Title"] = "Change";
}

<h1>Змінити автомобіль</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Change" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mark_For_Add" class="control-label"></label>
                <input asp-for="Mark_For_Add" class="form-control" />
                <span asp-validation-for="Mark_For_Add" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model_For_Add" class="control-label"></label>
                <input asp-for="Model_For_Add" class="form-control" />
                <span asp-validation-for="Model_For_Add" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewImage" class="control-label"></label>
                <input asp-for="NewImage" type="file" class="form-control" />
                <span asp-validation-for="NewImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year_For_Add" class="control-label"></label>
                <input asp-for="Year_For_Add" class="form-control" />
                <span asp-validation-for="Year_For_Add" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Change" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

